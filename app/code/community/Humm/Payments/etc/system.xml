<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <payment>
            <groups>
                <humm_payments_group translate="label comment" module="humm_payments">
                    <label><![CDATA[Humm Payment - <i style="color: gold">live interest free forever </i>]]></label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <frontend_class>complex</frontend_class>
                    <frontend_model>humm_payments/adminhtml_system_config_fieldset_group</frontend_model>
                    <fields/>
                </humm_payments_group>

                <humm_payments_solution>
                    <humm_payments type="group" translate="label comment">
                        <label><![CDATA[Humm Payment Solution]]></label>
                        <frontend_type>text</frontend_type>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <sort_order>50</sort_order>
                        <group>humm_payments_group</group>
                        <include>1</include>
                        <expanded>1</expanded>
                        <frontend_class>Humm-payment</frontend_class>
                        <frontend_model>humm_payments/adminhtml_system_config_fieldset_wizard</frontend_model>
                        <active_path>payment/humm_payments/active</active_path>
                        <comment><![CDATA[Little things. Big things.Everything<a href="https://docs.shophumm.com.au/ecommerce/magento_1/" target="_blank">learn more</a>
                         Don't have an account? Click <a href="https://www.shophumm.com.au/" target="_blank">here</a> to apply for a <strong>Humm Business Account</strong>]]></comment>
                        <fields>
                            <humm_payments_settings type="group" translate="label">
                                <label>Settings</label>
                                <frontend_type>text</frontend_type>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <sort_order>20</sort_order>
                                <frontend_model>humm_payments/adminhtml_system_config_fieldset_expanded</frontend_model>
                                <fields>
                                    <active translate="label">
                                        <label>Enable this Solution</label>
                                        <tooltip>Set to 'Yes' to enable Humm Payment as a secure payment method on your website</tooltip>
                                        <config_path>payment/humm_payments/active</config_path>
                                        <frontend_type>select</frontend_type>
                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                        <sort_order>20</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                    </active>
                                    <environment translate="label">
                                        <label>Environment</label>
                                        <tooltip>Only use "Production" in conjunction with production Humm partner credentials, and only use ‘Sandbox’ in conjunction with sandbox Humm partner credentials</tooltip>
                                        <config_path>payment/humm_payments/environment</config_path>
                                        <frontend_type>select</frontend_type>
                                        <source_model>humm_payments/adminhtml_system_config_source_environment</source_model>
                                        <sort_order>40</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                    </environment>
                                    <private_key translate="label">
                                        <label>API Key</label>
                                        <tooltip>Enter the "Humm Private Key/API key". This can be located in your Humm partner dashboard. Note: these are different for "Production" and "Sandbox" environments.</tooltip>
                                        <config_path>payment/humm_payments/private_key</config_path>
                                        <frontend_type>obscure</frontend_type>
                                        <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                                        <sort_order>60</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                    </private_key>
                                    <public_key>
                                        <label>Merchant No</label>
                                        <tooltip>Enter the "Humm Public Key/Merchant No". This can be located in your Humm partner dashboard. Note: these are different for "Production" and "Sandbox" environments.</tooltip>
                                        <config_path>payment/humm_payments/public_key</config_path>
                                        <frontend_type>text</frontend_type>
                                        <sort_order>50</sort_order>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                    </public_key>
                                    <humm_payments_setting_advanced type="group" translate="label">
                                        <label>Advanced Settings</label>
                                        <frontend_class>config-advanced</frontend_class>
                                        <frontend_type>text</frontend_type>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <sort_order>100</sort_order>
                                        <fields>
                                            <humm_payments_setting_payment type="group" translate="label">
                                                <label>Payment</label>
                                                <frontend_type>text</frontend_type>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <show_in_store>1</show_in_store>

                                                <sort_order>10</sort_order>
                                                <fields>
                                                    <title translate="label">
                                                        <label>Title</label>
                                                        <tooltip>This payment method title is used to display as payment method option</tooltip>
                                                        <comment>It is recommended to set this value to "Humm - Payments"</comment>
                                                        <config_path>payment/humm_payments/title</config_path>
                                                        <frontend_type>text</frontend_type>
                                                        <sort_order>10</sort_order>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </title>
                                                    <order_status translate="label">
                                                        <label>New Order Status</label>
                                                        <tooltip>Define the order status after payment been processed</tooltip>
                                                        <frontend_type>select</frontend_type>
                                                        <config_path>payment/humm_payments/order_status</config_path>
                                                        <source_model>adminhtml/system_config_source_order_status_processing</source_model>
                                                        <sort_order>30</sort_order>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </order_status>
                                                    <min_order_total translate="label">
                                                        <label>Minimum Order Total</label>
                                                        <tooltip>The minimum order value amount required to checkout</tooltip>
                                                        <config_path>payment/humm_payments/min_order_total</config_path>
                                                        <frontend_type>text</frontend_type>
                                                        <frontend_class>validate-number</frontend_class>
                                                        <sort_order>40</sort_order>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </min_order_total>
                                                    <force_humm translate="label">
                                                        <label>Force Humm</label>
                                                        <config_path>payment/humm_payments/force_humm</config_path>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <validate>required-entry</validate>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>49</sort_order>
                                                        <tooltip>(For New Zealand Stores only) You will switch to Humm if this is set to 'yes'. Otherwise you will be automatically switched over on the official Humm launch date</tooltip>
                                                    </force_humm>
                                                    <automatic_invoice translate="label">
                                                        <label>Automatic Invoice (for refunding, must be enabled)</label>
                                                        <frontend_type>select</frontend_type>
                                                        <config_path>payment/humm_payments/automatic_invoice</config_path>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>45</sort_order>
                                                        <tooltip>If disabled, online refunding in Magento with Humm will not be possible.</tooltip>
                                                    </automatic_invoice>
                                                    <email_customer translate="label">
                                                        <label>Email Customer</label>
                                                        <frontend_type>select</frontend_type>
                                                        <config_path>payment/humm_payments/email_customer</config_path>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>46</sort_order>
                                                    </email_customer>
                                                    <automatic_invoice translate="label">
                                                        <label>Automatic Invoice (for refunding, must be enabled)</label>
                                                        <frontend_type>select</frontend_type>
                                                        <config_path>payment/humm_payments/automatic_invoice</config_path>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>47</sort_order>
                                                        <tooltip>If disabled, online refunding in Magento with Humm will not be possible.</tooltip>
                                                    </automatic_invoice>
                                                    <pend_order translate="label">
                                                        <label>Pending Order Auto Clean</label>
                                                        <config_path>payment/humm_payments/pend_order</config_path>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>50</sort_order>
                                                    </pend_order>

                                                    <pend_days translate="label">
                                                        <label>Pending Order Auto Clean Day(s)</label>
                                                        <comment>It is recommended to set this value to 1 or 2 day(s), then clean humm pending orders repeatedly </comment>
                                                        <config_path>payment/humm_payments/pend_days</config_path>
                                                        <frontend_type>text</frontend_type>
                                                        <frontend_class>validate-number</frontend_class>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>0</show_in_store>
                                                        <sort_order>51</sort_order>
                                                    </pend_days>

                                                    <sort_order translate="label">
                                                        <label>Sort Order</label>
                                                        <tooltip>Give a number to define the position in payment option Humm Payment will be placed, 0 is the first position</tooltip>
                                                        <config_path>payment/humm_payments/sort_order</config_path>
                                                        <frontend_type>text</frontend_type>
                                                        <frontend_class>validate-number</frontend_class>
                                                        <sort_order>60</sort_order>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </sort_order>
                                                </fields>
                                            </humm_payments_setting_payment>

                                            <humm_payments_setting_country_currency type="group" translate="label">
                                                <label>Country and Currency</label>
                                                <frontend_type>text</frontend_type>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <show_in_store>1</show_in_store>
                                                <sort_order>30</sort_order>
                                                <fields>
                                                    <allowspecific translate="label">
                                                        <label>Payment from applicable countries</label>
                                                        <frontend_type>allowspecific</frontend_type>
                                                        <source_model>humm_payments/adminhtml_system_config_source_payment_allspecificcountries</source_model>
                                                        <config_path>payment/humm_payments/country_currency/allow_specific_countries</config_path>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                        <sort_order>10</sort_order>
                                                    </allowspecific>
                                                    <specificcountry translate="label">
                                                        <label>Payment from Specific countries</label>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>humm_payments/adminhtml_system_config_source_country</source_model>
                                                        <config_path>payment/humm_payments/country_currency/specific_countries</config_path>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                        <sort_order>20</sort_order>
                                                        <depends>
                                                            <allowspecific>1</allowspecific>
                                                        </depends>
                                                    </specificcountry>
                                                    <allowed_currencies translate="label">
                                                        <label>Allowed Currencies</label>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>humm_payments/adminhtml_system_config_source_currency</source_model>
                                                        <config_path>payment/humm_payments/country_currency/allowed_currencies</config_path>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                        <sort_order>30</sort_order>
                                                    </allowed_currencies>
                                                </fields>
                                            </humm_payments_setting_country_currency>

                                            <humm_payments_setting_api type="group" translate="label">
                                                <label>API</label>
                                                <frontend_type>text</frontend_type>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <show_in_store>1</show_in_store>
                                                <sort_order>40</sort_order>
                                                <fields>
                                                    <timeout translate="label">
                                                        <label>Timeout</label>
                                                        <tooltip>Identify timeout (seconds) for API calls</tooltip>
                                                        <comment>The default value is set to 120 secounds</comment>
                                                        <config_path>payment/humm_payments/api/timeout</config_path>
                                                        <frontend_type>text</frontend_type>
                                                        <frontend_class>validate-number</frontend_class>
                                                        <sort_order>10</sort_order>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </timeout>
                                                </fields>
                                            </humm_payments_setting_api>
                                        </fields>
                                    </humm_payments_setting_advanced>
                                </fields>
                            </humm_payments_settings>

                            <humm_payments_widgets type="group" translate="label">
                                <label>Widgets and Banners</label>
                                <frontend_type>text</frontend_type>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <sort_order>30</sort_order>
                                <frontend_model>humm_payments/adminhtml_system_config_fieldset_expanded</frontend_model>
                                <comment><![CDATA[<strong>Display Humm  Payment marketing banner and popup on home page to give customers necessary information and increase conversions</strong>]]></comment>
                                <expanded>0</expanded>
                                <fields>
                                    <humm_payments_widgets_product_page type="group" translate="label">
                                        <label>Product Page</label>
                                        <expanded>1</expanded>
                                        <frontend_type>text</frontend_type>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <sort_order>20</sort_order>
                                        <fields>
                                            <humm_payments_widgets_product_page_widget type="group" translate="label">
                                                <label>Widget</label>
                                                <expanded>1</expanded>
                                                <frontend_type>text</frontend_type>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <show_in_store>1</show_in_store>
                                                <sort_order>30</sort_order>
                                                <fields>
                                                    <enabled translate="label comment">
                                                        <label>Enabled</label>
                                                        <tooltip>Select 'Yes' to enable Widget</tooltip>
                                                        <config_path>payment/humm_payments/widgets/product_page/widget/enabled</config_path>
                                                        <sort_order>10</sort_order>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </enabled>
                                                    <selector translate="label comment">
                                                        <label>Element selector</label>
                                                        <tooltip>Enter HTML element selector to insert widget in any places</tooltip>
                                                        <config_path>payment/humm_payments/widgets/product_page/widget/selector</config_path>
                                                        <sort_order>20</sort_order>
                                                        <frontend_type>text</frontend_type>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                        <depends>
                                                            <enabled>1</enabled>
                                                        </depends>
                                                    </selector>
                                                </fields>
                                            </humm_payments_widgets_product_page_widget>
                                        </fields>
                                    </humm_payments_widgets_product_page>

                                    <humm_payments_widgets_cart_page type="group" translate="label">
                                        <label>Cart Page</label>
                                        <expanded>1</expanded>
                                        <frontend_type>text</frontend_type>
                                        <show_in_default>1</show_in_default>
                                        <show_in_website>1</show_in_website>
                                        <show_in_store>1</show_in_store>
                                        <sort_order>40</sort_order>
                                        <fields>
                                            <humm_payments_widgets_cart_page_widget type="group" translate="label">
                                                <label>Widget</label>
                                                <expanded>1</expanded>
                                                <frontend_type>text</frontend_type>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <show_in_store>1</show_in_store>
                                                <sort_order>30</sort_order>
                                                <fields>
                                                    <enabled translate="label comment">
                                                        <label>Enabled</label>
                                                        <tooltip>Select 'Yes' to enable Widget</tooltip>
                                                        <config_path>payment/humm_payments/widgets/cart_page/widget/enabled</config_path>
                                                        <sort_order>10</sort_order>
                                                        <frontend_type>select</frontend_type>
                                                        <source_model>adminhtml/system_config_source_yesno</source_model>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                    </enabled>
                                                    <selector translate="label comment">
                                                        <label>Element selector</label>
                                                        <tooltip>Enter HTML element selector to insert widget in any places</tooltip>
                                                        <config_path>payment/humm_payments/widgets/cart_page/widget/selector</config_path>
                                                        <sort_order>20</sort_order>
                                                        <frontend_type>text</frontend_type>
                                                        <show_in_default>1</show_in_default>
                                                        <show_in_website>1</show_in_website>
                                                        <show_in_store>1</show_in_store>
                                                        <depends>
                                                            <enabled>1</enabled>
                                                        </depends>
                                                    </selector>
                                                </fields>
                                            </humm_payments_widgets_cart_page_widget>
                                        </fields>
                                    </humm_payments_widgets_cart_page>
                                </fields>
                            </humm_payments_widgets>
                        </fields>
                    </humm_payments>
                </humm_payments_solution>
            </groups>
        </payment>
    </sections>
</config>
